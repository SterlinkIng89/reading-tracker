---
import BaseLayout from "../layout/BaseLayout.astro";
import AuthContainer from "../components/signin/AuthContainer.astro";
import "../styles/global.css";

export const prerender = false;
---

<BaseLayout title="Sign In - Reading Tracker">
  <div class="px-4 py-8 flex flex-col min-h-[calc(100vh-10rem)]">
    <main class="w-full max-w-4xl mx-auto flex flex-col flex-grow">
      <div class="flex flex-col items-center justify-center flex-grow">
        <AuthContainer />
      </div>

      <!-- Footer Text -->
      <div class="text-center mt-8">
        <p class="text-sm text-secondary">
          Track your reading progress with
          <span class="font-semibold text-slate-400">Reading Tracker</span>
        </p>
      </div>
    </main>
  </div>
</BaseLayout>
